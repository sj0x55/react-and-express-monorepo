{
  "name": "react-and-express-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "projects/*"
  ],
  "scripts": {
    "packages:build": "tsc --build --force ./tsconfig.packages.json",
    "client:start": "npm run packages:build && npm start -w @react-and-express/client",
    "server:start": "npm run packages:build && npm start -w @react-and-express/server",
    "client:type-check": "npm run type-check -w @react-and-express/client",
    "server:type-check": "npm run type-check -w @react-and-express/server"
  },
  "dependencies": {
    "date-fns": "^2.25.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/date-fns": "^2.6.0",
    "@types/lodash": "^4.14.175",
    "jest-date-mock": "^1.0.8",
    "typescript": "^4.4.4"
  }
}
